<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact.ContactPublishFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@color/bg"
        android:id="@+id/top">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/top_left"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/top_img"
        android:layout_below="@id/top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:id="@+id/img"
            android:src="@drawable/act_img"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_below="@id/top_img"
        android:id="@+id/location">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/location"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:id="@+id/location_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/location_icon"
            android:text="重庆市北碚区天生街道"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:id="@+id/location_text"/>

        <!--        <TextView-->
        <!--            android:layout_width="25dp"-->
        <!--            android:layout_height="25dp"-->
        <!--            android:text=">"-->
        <!--            android:textSize="22sp"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"/>-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/location"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动类型："
                android:textSize="18sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="旅游"
                android:padding="5dp"
                android:textSize="18sp"
                android:id="@+id/btn1"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="棋牌"
                android:padding="5dp"
                android:textSize="18sp"
                android:id="@+id/btn2"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="运动"
                android:padding="5dp"
                android:textSize="18sp"
                android:id="@+id/btn3"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="其它"
                android:padding="5dp"
                android:textSize="18sp"
                android:id="@+id/btn5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="活动名称："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/act_name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="活动地点："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/act_place"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="期望人数："/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/square_border"
                android:id="@+id/act_person_num"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="联系电话："/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/act_phone_num"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="备注:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/act_note"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="发布活动"
        android:textSize="24sp"
        android:id="@+id/publish_btn"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_publish_btn"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>