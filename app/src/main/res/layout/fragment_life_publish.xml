<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".ui.life.LifePublishFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/top">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/top_left"
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tip"
            android:layout_marginRight="10dp"
            android:id="@+id/top_right"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/img_container"
        android:layout_below="@id/top"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:id="@+id/add_img"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:background="@drawable/publish_img_border"
            android:textSize="32sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add_img"
            android:id="@+id/pub_img_recycler"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:id="@+id/type"
        android:layout_marginTop="20dp"
        android:layout_below="@id/img_container"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动类型："
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="旅游"
            android:padding="5dp"
            android:textSize="18sp"
            android:id="@+id/btn1"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="棋牌"
            android:padding="5dp"
            android:textSize="18sp"
            android:id="@+id/btn2"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="运动"
            android:padding="5dp"
            android:textSize="18sp"
            android:id="@+id/btn3"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="聊天"
            android:padding="5dp"
            android:textSize="18sp"
            android:id="@+id/btn4"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="其它"
            android:padding="5dp"
            android:textSize="18sp"
            android:id="@+id/btn5"/>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/type"
        android:id="@+id/title"
        android:textSize="20sp"
        android:hint="请输入标题"
        android:background="@drawable/edit_bottom_border"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/content"
        android:background="@drawable/edit_bottom_border"
        android:layout_marginTop="10dp"
        android:hint="添加正文"
        android:gravity="top"
        android:layout_below="@id/title"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/location"
       android:layout_below="@id/content">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/location"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:id="@+id/location_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/location_icon"
            android:text="重庆市北碚区天生街道"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:id="@+id/location_text"/>

<!--        <TextView-->
<!--            android:layout_width="25dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:text=">"-->
<!--            android:textSize="22sp"-->
<!--            android:layout_margin="10dp"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_centerVertical="true"/>-->

    </RelativeLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="发布动态"
        android:textSize="24sp"
        android:id="@+id/publish_btn"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_publish_btn"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>